import { useState } from "react";
function Drendering() {
    const [isValid, setisValid] = useState(false)
        function Change() {
            setisValid(true);
        }

    return (
        <div>
            
            {isValid ? <h2><i>Login Successful</i></h2> : <h2><b>Unsucessful</b></h2> }
            <button onClick={Change}> ClickMe</button>
        </div>
    )
}
export default Drendering;
